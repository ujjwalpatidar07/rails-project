<div class="row">
  <div class="col-4"></div>
  <div class="col-4">
    <h2>Add New Plan</h2>
    <%= form_with model: @subscriptionplan, url: subscription_plans_path do |form| %>
      <div class="form-group">
        <%= form.label :plan_name, class: 'form-label' %>
        <%= form.text_field :plan_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :plan_value, class: 'form-label' %>
        <%= form.number_field :plan_value, class: 'form-control' %>
      </div>
      <br>
      <div class="form-group">
        <%= form.label :plan_type, class: 'form-label' %>
        <%= form.select :plan_type, ['Monthly','Yearly'], class: 'form-select' %>
      </div>
      
  
     <br>
      <div class="actions">
        <%= form.submit class: 'btn btn-dark'%>
      </div>
    <% end %>
    <%= link_to "Back", subscription_plans_path %>
  </div>
  <div class="col-4"></div>
</div>
