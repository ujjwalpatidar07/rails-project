<div class="row">
  <div class="col-4">
    <h2>Registered Sports</h2>
    <ul id="sports">
      <%= render @sports %>
    </ul>
    <h2>Add New Sports</h2>
    <%= form_with model: @sport,local: false do |form| %>
      
      <div class="form-group">
        <%= form.label :sport_name,class: "form-label" %><br>
        <%= form.text_field :name, class: 'form-control' %>
      </div>
      <br>
      <div class="actions">
        <%= form.submit class: 'btn btn-dark' %>
      </div>
    <% end %>
    <%= link_to "Back", root_path %>
  </div>
  <div class="col-4"></div>
  <div class="col-4"></div>
</div>
