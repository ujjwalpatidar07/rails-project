<div class="row">
  <div class="col-4"></div>
  <div class="col-4">
    <h2>Add New Student</h2>
    <%= form_with model: @student do |form| %>
      
      <div class="form-group">
        <%= form.label :student_name,class: "form-label" %><br>
        <%= form.text_field :name, class: 'form-control',:readonly => true %>
      </div>

      <div class="form-group">
        <%= form.label :Teacher_name, class: 'form-label' %>
        <%= form.select(:teacher_ids, Teacher.all.collect {|t| [ t.name, t.id ] }, 
                                           { :prompt => "Please select"}, 
                                           { :multiple => true, class: 'form-control' }) %>
      </div>  

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
    <%= link_to "Back", student_path(@student) %>
  </div>
  <div class="col-4"></div>
  
</div>
