<div class="row">
  <div class="col-4"></div>
  <div class="col-4">
    <h2>Add New Product</h2>
    <%= form_with model: @product, url: products_path do |form| %>
      
      <div class="form-group">
        <%= form.label :Product_Name, class: 'form-label' %>
        <%= form.text_field :name ,class: 'form-control' %>
      </div>
      
      

      <div class="form-group">
        <%= form.label :Select_Category, class: 'form-label' %><br>
        <%= form.select :category_id, Category.all.map{|c| [c.name, c.id]},class: 'form-control' %>
      </div>
     <br>
      <div class="actions">
        <%= form.submit class: 'btn btn-dark'%>
      </div>
    <% end %>
    <%= link_to "Back", products_path %>
  </div>
  <div class="col-4"></div>
</div>
