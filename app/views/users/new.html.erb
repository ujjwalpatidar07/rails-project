<div class="row">
  <div class="col-4"></div>
  <div class="col-4">
    <h2>Add New User</h2>
    <%= form_with model: @userr, url: userrs_path do |form| %>
      
      <div class="form-group">
        <%= form.label :userr_Name, class: 'form-label' %>
        <%= form.text_field :name ,class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= form.label :userr_email, class: 'form-label' %>
        <%= form.text_field :email, class: 'form-control' %>
      </div>

     <br>
      <div class="actions">
        <%= form.submit class: 'btn btn-dark'%>
      </div>
    <% end %>
    <%= link_to "Back",userrs_path %>
  </div>
  <div class="col-4"></div>
</div>
