<div class="row">
  <div class="col-4"></div>
  <div class="col-4">
    <h2>Edit User</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :name ,class: "form-label"%><br />
        <%= f.text_field :name, autofocus: true, placeholder: 'ex - John doe', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email ,class: "form-label"%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'ex - abc@gmail.com', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :contact_no ,class: "form-label"%><br />
        <%= f.text_field :contact_no, autofocus: true, placeholder: 'ex - 9999999999', class: 'form-control' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      
     
      <div class="form-group">
        <%= f.label :password %><i>(leave blank if you don't want to change)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" ,class: 'form-control'%>
        <% if @minimum_password_length %>
          <em>*<%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :current_password %>
        <%= f.password_field :current_password, autocomplete: "current-password",class: 'form-control'%>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Update",class: 'btn btn-dark' %>
        <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
      </div>

    <% end %><br>
  
    
  <%= link_to "Back", :back %>
    <div class="col-4"></div>
  </div>
</div>  
