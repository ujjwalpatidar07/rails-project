
    
    <%= form_with model: @article do |form| %>
      <div class="form-group">
        <%= @article.errors.full_messages.to_sentence %>
      </div>

      <div class="form-group">
        <%= form.label :title ,class: 'form-label' %><br>
        <%= form.text_field :title ,class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= form.label :body,class: 'form-label' %><br>
        <%= form.text_area :body,class: 'form-control' %>
      </div>

      <fieldset>
        <legend>Comments:</legend>
          <%= form.fields_for :comments do |comment_form| %>
              <%= render "comment_fields", f: comment_form %>
          <% end %>
          <%= link_to_add_fields "Add comment", form, :comments %>
      </fieldset>

      <br>
      <div class="actions">
        <%= form.submit class: 'btn btn-dark' %>
      </div>

    <% end %>
 