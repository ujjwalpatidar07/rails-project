<div class="row">
  <div class="col-4"></div>
  <div class="col-4">
    <h2>Add New Teacher</h2>
    <%= form_with model: @teacher do |form| %>
      
      <div class="form-group">
        <%= form.label :teacher_name,class: "form-label" %><br>
        <%= form.text_field :name, class: 'form-control',:readonly => true %>
      </div>

      <div class="form-group">
        <%= form.label :Student_name, class: 'form-label' %>
        <%= form.select(:student_ids, Student.all.collect {|s| [ s.name, s.id ] }, 
                                           { :prompt => "Please select"}, 
                                           { :multiple => true, class: 'form-control' }) %>
      </div>
      <br>
      <div class="actions">
        <%= form.submit class: 'btn btn-dark'%>
      </div>
    <% end %>
    <%= link_to "Back",teacher_path(@teacher) %>
  </div>
  <div class="col-4"></div>
</div>
