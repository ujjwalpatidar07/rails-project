<div class="row">
  <div class="col-4">
    <h4>Teacher: <i style="color: blueviolet;"><%= @teacher.name %></i></h4>
    <strong style="color: darkblue;"><%= @teacher.name %>'s Students:</strong><br>
    <ul>
      <% @teacher.students.each do |student|  %>
      <li>
        <%= student.name %>  
      </li>
      <% end %>
    </ul>
    <br>
    <%= link_to "Update Students's",edit_teacher_path(@teacher) %><br>
    <%= link_to "Destroy", teacher_path(@teacher),
                      method: :delete,
                      data: { confirm: "Are you sure?" } %><br>
    <%= link_to "Back", teachers_path %>
  </div>
  <div class="col-4"></div>
  <div class="col-4"></div>
</div>
